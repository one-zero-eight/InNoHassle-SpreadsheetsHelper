{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "ES2019",
    "module": "None",
    "experimentalDecorators": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outFile": "build/main.js",
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "files": [
    "main.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
